<p>
<%= link_to 'Create a New Article', new_article_path %>
</p>
<table class="table table-bordered table-stripped">
<thead>
<tr>
<th>Title</th>
<th>Text</th>
<th></th>
<th></th>
<th></th>
</tr>
</thead>
<tbody>
<% @articles.each do |article| %>
	<tr>
		<td><%= article.title %></td>
		<td><%= article.text %></td>
		<td><%= link_to 'Show Details', article_path(article) %></td>
		<td><%= link_to 'Edit', edit_article_path(article) %></td>
		<td><%= link_to 'Delete', article_path(article), method: :delete %></td>
	</tr>
<% end %>
</tbody>
</table>